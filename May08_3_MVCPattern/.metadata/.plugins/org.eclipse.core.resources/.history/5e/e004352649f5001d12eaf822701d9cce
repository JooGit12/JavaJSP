	<%
	double n = Double.parseDouble(request.getParameter("no"));
	String w = request.getParameter("what");

	double result = n * 0.621371;
	String from = "km/h";
	String to = "mi/h";
	if (w.equals("len")) {
		result = n * 0.393701;
		from = "cm";
		to = "inch";
	} else if (w.equals("size")) {
		result = n * 0.3025;
		from = "§³";
		to = "Æò";
	} else if (w.equals("temp")) {
		result = (n * (9 / 5)) + 32;
		from = "¡É";
		to = "¢µ";
	}
	%>

	<%=String.format("%.1f", n) %> <%=from %><br> 
	¡é<br>
	<%=String.format("%.1f", result) %> <%=to %>
